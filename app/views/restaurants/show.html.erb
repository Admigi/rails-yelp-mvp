<h2><%=  @restaurant.name %></h2>
<p>Adress: <%= @restaurant.address %></p>
<p>Phone: <%= @restaurant.phone_number %></p>
<p><%= @restaurant.category %> food</p>

<br>

<h3>Reviews:</h3>
<ul>
  <% @restaurant.reviews.each do |review| %>
    <li><%= review.rating %>/5 - <%= review.content %></li>
  <% end %>
</ul>

<br>

<h3>Add a review</h3>
<%= simple_form_for [@restaurant, @review] do |f| %>
  <%= f.input :rating, input_html: {min: '0', max: '5'} %>
  <%= f.input :content %>
  <%= f.submit %>
<% end %>

<%= link_to "Back to restaurants", restaurants_path %>
